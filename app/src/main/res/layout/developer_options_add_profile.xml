<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto">

  <data>

    <variable
      name="viewModel"
      type="org.oppia.android.app.devoptions.devoptionsitemviewmodel.DeveloperOptionsAddProfileViewModel" />
  </data>

  <androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/component_color_shared_screen_tertiary_background_color">

    <TextView
      android:id="@+id/add_delete_profile_text_view"
      style="@style/Heading5ViewStart"
      android:layout_width="match_parent"
      android:background="@color/component_color_shared_item_background_solid_color"
      android:paddingStart="16dp"
      android:paddingTop="20dp"
      android:paddingEnd="16dp"
      android:paddingBottom="20dp"
      android:text="Add and Delete Profiles"
      android:textColor="@color/component_color_shared_active_text_color"
      app:layout_constraintBottom_toTopOf="@id/add_three_profile_text_view"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

    <TextView
      android:id="@+id/add_three_profile_text_view"
      style="@style/Subtitle1ViewStart"
      android:layout_width="match_parent"
      android:onClick="@{(v) -> viewModel.addThreeProfiles()}"
      android:paddingStart="16dp"
      android:paddingTop="20dp"
      android:paddingEnd="16dp"
      android:paddingBottom="20dp"
      android:text="Add 3 Profiles"
      android:textColor="@color/component_color_shared_primary_dark_text_color"
      app:layout_constraintBottom_toTopOf="@id/view_divider1"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/add_delete_profile_text_view" />

    <View
      android:id="@+id/view_divider1"
      android:layout_width="match_parent"
      android:layout_height="2dp"
      android:background="@color/component_color_shared_divider_color"
      app:layout_constraintBottom_toTopOf="@id/add_ten_profile_text_view"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/add_three_profile_text_view" />

    <TextView
      android:id="@+id/add_ten_profile_text_view"
      style="@style/Subtitle1ViewStart"
      android:layout_width="match_parent"
      android:onClick="@{(v) -> viewModel.addTenProfiles()}"
      android:paddingStart="16dp"
      android:paddingTop="20dp"
      android:paddingEnd="16dp"
      android:paddingBottom="20dp"
      android:text="Add 10 Profiles"
      android:textColor="@color/component_color_shared_primary_dark_text_color"
      app:layout_constraintBottom_toTopOf="@id/delete_all_profile_text_view"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/view_divider1" />

    <View
      android:id="@+id/view_divider2"
      android:layout_width="match_parent"
      android:layout_height="2dp"
      android:background="@color/component_color_shared_divider_color"
      app:layout_constraintBottom_toTopOf="@id/delete_all_profile_text_view"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/add_ten_profile_text_view" />

    <TextView
      android:id="@+id/delete_all_profile_text_view"
      style="@style/Subtitle1ViewStart"
      android:layout_width="match_parent"
      android:onClick="@{(v) -> viewModel.deleteProfiles()}"
      android:paddingStart="16dp"
      android:paddingTop="20dp"
      android:paddingEnd="16dp"
      android:paddingBottom="20dp"
      android:text="Delete all profiles except admin"
      android:textColor="@color/component_color_shared_primary_dark_text_color"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/view_divider2" />
  </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
